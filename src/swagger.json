{
   "swagger": "2.0",
   "info": {
     "title": "E-Learning System",
     "description": "E-Learning System Documentation",
     "version": "1.0"
   },
   "produces": ["application/json"],
   "host": "localhost:5000",
   "basePath": "/",
   "paths": {
     "/api/users": {
       "post": {
         "x-swagger-router-controller": "middleware-name1",
         "operationId": "Save Users",
         "tags": ["/users"],
         "description": "Save new users",
         "parameters": [
            {
              "name":"UserName",
              "description": "Name",
              "required": true,
              "schema": {
                "type": "string"
              }
            },
            {
              "name":"UserLastName",
              "description": "Last Name",
              "required": true,
              "schema": {
                "type": "string"
              }
            },	
            {
              "name":"UserEmail",
              "description": "Name",
              "required": true,
              "schema": {
                "type": "string"
              }
            },	
            {
              "name":"UserPassword",
              "description": "Password(8 characters minimum)",
              "required": true,
              "schema": {
                "type": "string"
              }
            },	
            {
              "name":"UserRol",
              "description": "admin/user/student/teacher",
              "required": true,
              "schema": {
                "type": "string"
              }
            },
            {
              "name":"UserActive",
              "description": "Name",
              "required": true,
              "schema": {
                "type": "boolean"
              }
            }
         ],
         "responses": {
           "200": {
             "description": "{ uuid:uuid, message: Success }"
           }
         }
       }
     },
     "/api/course-templates": {
      "post": {
        "x-swagger-router-controller": "middleware-name1",
        "operationId": "Save Course-Templates",
        "tags": ["/course-templates"],
        "description": "Save new course",
        "parameters": [
           {
             "name":"CourseTemplateName",
             "description": "Name",
             "required": true,
             "schema": {
               "type": "string"
             }
           },
           {
             "name":"CourseTemplateContent",
             "description": "Course content",
             "required": true,
             "schema": {
               "type": "array"
             }
           },	
           {
             "name":"CourseTemplateRequirements",
             "description": "Course requirements",
             "required": true,
             "schema": {
               "type": "array"
             }
           },	
           {
             "name":"CourseTemplateMaterial",
             "description": "Course Material",
             "required": true,
             "schema": {
               "type": "array"
             }
           },	
           {
             "name":"CourseTemplateTeacher",
             "description": "Name teacher",
             "required": true,
             "schema": {
               "type": "string"
             }
           },
           {
            "name":"CourseTemplateDescription",
            "description": "Course Description",
            "required": true,
            "schema": {
              "type": "boolean"
              }
            },
           {
            "name":"CourseTemplateTags",
            "description": "Course tags",
            "required": true,
            "schema": {
              "type": "array"
             }
            },
           {
             "name":"CourseTemplateActive",
             "description": "Course status",
             "required": true,
             "schema": {
               "type": "boolean"
             }
           }
        ],
        "responses": {
          "200": {
            "description": "{ uuid:uuid, message: Success }"
          }
        }
      }
    }
   }
}